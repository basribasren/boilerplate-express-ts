{
	"name": "boilerplate-express-ts",
	"version": "1.0.0",
	"main": "src/index.ts",
	"engines": {
		"node": ">=20.16.0 <21.0.0"
	},
	"author": "Basri Basren <basri.official.acc@gmail.com>",
	"scripts": {
		"start": "tsx watch src/index.ts",
		"build": "rimraf dist && tsc && yarn run prepare-swagger",
		"serve": "node dist/index.js",
		"test": "jest",
		"lint": "eslint src/",
		"generate": "plop",
		"sequelize": "ts-node ./node_modules/.bin/sequelize-cli",
		"prepare-swagger": "mkdir -p ./dist/docs && yarn run copy-swagger-ui  && yarn run copy-swagger-config",
		"copy-swagger-ui": "cp -r ./src/docs/swagger-ui ./dist/docs",
		"copy-swagger-config": "cp -r ./src/docs/swagger-config ./dist/docs"
	},
	"keywords": [
		"express",
		"api",
		"typescript"
	],
	"repository": "https://github.com/basribasren/boilerplate-express-ts",
	"license": "MIT",
	"dependencies": {
		"@hapi/boom": "^10.0.1",
		"bcrypt": "^5.1.1",
		"body-parser": "^1.20.3",
		"compression": "^1.7.4",
		"connect-session-sequelize": "^7.1.7",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.21.0",
		"express-session": "^1.18.0",
		"helmet": "^7.1.0",
		"hpp": "^0.2.3",
		"jsonwebtoken": "^9.0.2",
		"mariadb": "^3.3.2",
		"method-override": "^3.0.0",
		"response-time": "^2.3.2",
		"rimraf": "^6.0.1",
		"sequelize": "^6.37.3",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.1",
		"uuid": "^10.0.0",
		"winston": "^3.14.2"
	},
	"devDependencies": {
		"@eslint/js": "^9.11.0",
		"@types/bcrypt": "^5.0.2",
		"@types/compression": "^1.7.5",
		"@types/cookie-parser": "^1.4.7",
		"@types/cors": "^2.8.17",
		"@types/dotenv": "^8.2.0",
		"@types/express": "^4.17.21",
		"@types/express-session": "^1.18.0",
		"@types/hpp": "^0.2.6",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/method-override": "^0.0.35",
		"@types/node": "^22.5.5",
		"@types/response-time": "^2.3.8",
		"@types/swagger-jsdoc": "^6.0.4",
		"@types/swagger-ui-express": "^4.1.6",
		"eslint": "^9.11.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"globals": "^15.9.0",
		"prettier": "^3.3.3",
		"sequelize-cli": "^6.6.2",
		"ts-node": "^10.9.2",
		"tsx": "^4.19.1",
		"typescript": "^5.6.2",
		"typescript-eslint": "^8.6.0"
	}
}
